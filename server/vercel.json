{
  "buildCommand": "pnpm build",       // Uses the build script in package.json
  "outputDirectory": "dist",          // Matches your tsup output
  "cleanUrls": true,
  "version": 2,
  "builds": [
    {
      "src": "src/app.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/app.ts"
    }
  ]
}
